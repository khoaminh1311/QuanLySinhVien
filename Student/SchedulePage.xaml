<Page x:Class="InterfaceSinhVien.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lịch Cá Nhân" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="📅" FontSize="28" Margin="0,0,10,0"/>
            <TextBlock Text="THỜI KHÓA BIỂU &amp; LỊCH THI" FontSize="24" FontWeight="Bold" Foreground="#0078D7" VerticalAlignment="Center"/>
        </StackPanel>

        <TabControl x:Name="TabControlLich" Grid.Row="1" BorderThickness="0">

            <TabItem Header="Lịch Học" FontSize="16" Height="40" Width="120">
                <DataGrid x:Name="dgLichHoc" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" Margin="0,10,0,0"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          RowHeight="35" Background="White" BorderBrush="#DDD" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Lớp" Binding="{Binding MaLop}" Width="120" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Môn Học" Binding="{Binding TenMon}" Width="150"/>
                        <DataGridTextColumn Header="Phòng Học" Binding="{Binding PhongHoc}" Width="100"/>
                        <DataGridTextColumn Header="Lịch Học" Binding="{Binding ThoiGian}" Width="250" Foreground="Red"/>
                        <DataGridTextColumn Header="Thời Lượng" Binding="{Binding ThoiLuong}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Lịch Thi" FontSize="16" Height="40" Width="120">
                <DataGrid x:Name="dgLichThi" AutoGenerateColumns="False" IsReadOnly="True" 
                          CanUserAddRows="False" Margin="0,10,0,0"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          RowHeight="35" Background="White" BorderBrush="#DDD" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Kỳ Thi" Binding="{Binding MaKyThi}" Width="100"/>
                        <DataGridTextColumn Header="Môn Thi" Binding="{Binding MaLop}" Width="150" FontWeight="Bold"/>
                        <DataGridTextColumn Header="Ngày Giờ Thi" Binding="{Binding NgayGio}" Width="200" Foreground="#D32F2F"/>
                        <DataGridTextColumn Header="Giám Thị" Binding="{Binding GiamThi}" Width="200"/>
                        <DataGridTextColumn Header="Trạng Thái" Binding="{Binding TrangThai}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>