<Page x:Class="InterfaceSinhVien.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Hồ sơ cá nhân" Background="White">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0,0,30,0" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect Color="#E2E8F0" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Margin="0,40">
                <Border Width="120" Height="120" CornerRadius="60" Background="#F1F5F9" Margin="0,0,0,20">
                    <TextBlock Text="👤" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#94A3B8"/>
                </Border>

                <TextBlock x:Name="txtHoTen" Text="..." HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock x:Name="txtMaSV" Text="..." HorizontalAlignment="Center" FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>

                <Button Content="Chỉnh sửa hồ sơ" HorizontalAlignment="Center" Margin="0,20,0,0"
                        Style="{StaticResource PrimaryBtnStyle}" Width="150"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="10" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect Color="#E2E8F0" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Margin="40">
                <TextBlock Text="Thông tin chi tiết" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>
                <Separator Background="#F1F5F9" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Giới tính" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtGioiTinh" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Ngày sinh" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="18/08/2002" FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Email" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtEmail" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Số điện thoại" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtPhone" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Địa chỉ" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtDiaChi" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Ngành học" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtNganh" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Khóa" Foreground="#64748B" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="txtKhoa" Text="..." FontWeight="SemiBold" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>