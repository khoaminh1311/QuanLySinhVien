<Page x:Class="InterfaceSinhVien.TuitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Học phí" Background="#F9F9F9">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDD" BlurRadius="10" ShadowDepth="2" Direction="270" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
            <TextBlock Text="💳" FontSize="28" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="HỌC PHÍ &amp; THANH TOÁN" FontSize="26" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Tổng học phí phải đóng" Foreground="#777" FontSize="14"/>
                    <TextBlock x:Name="txtTongTien" Text="0 VNĐ" FontSize="28" FontWeight="Bold" Foreground="#0078D7" Margin="0,5,0,20"/>

                    <Separator Background="#EEE" Margin="0,0,0,15"/>

                    <TextBlock Text="Trạng thái hiện tại" Foreground="#777" FontSize="14"/>
                    <Border x:Name="borderStatus" Background="#EEE" CornerRadius="5" Padding="10,5" HorizontalAlignment="Left" Margin="0,5,0,0">
                        <TextBlock x:Name="txtTrangThai" Text="Đang tải..." FontWeight="Bold" Foreground="#555"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Background="#2C3E50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="THÔNG TIN CHUYỂN KHOẢN" Foreground="White" FontWeight="Bold" FontSize="16" Opacity="0.8"/>

                    <StackPanel Grid.Row="1" Margin="0,15">
                        <TextBlock Text="Ngân hàng:" Foreground="#BBB" FontSize="13"/>
                        <TextBlock Text="6anhemsieunhanBank (SHB)" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Số tài khoản:" Foreground="#BBB" FontSize="13"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="1234567889" Foreground="#FFD700" FontSize="22" FontWeight="Bold" />
                            <Button Content="Sao chép" Margin="15,0,0,0" Padding="8,2" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1" Cursor="Hand" Click="BtnCopySTK_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Nội dung chuyển khoản:" Foreground="#BBB" FontSize="13"/>
                        <TextBlock x:Name="txtNoiDungCK" Text="Họ Tên + MSSV" Foreground="White" FontSize="14" FontStyle="Italic" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Xác nhận thanh toán" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="Vui lòng dán đường dẫn (Link) biên lai chuyển khoản vào bên dưới (Google Drive hoặc link ảnh)." 
                       Foreground="#666" TextWrapping="Wrap" LineHeight="20"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtLinkBienLai" Height="40" VerticalContentAlignment="Center" FontSize="14" 
                     Padding="10,0" BorderBrush="#CCC" BorderThickness="1">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <Button x:Name="btnMoLink" Content="🔗 Mở Link" Grid.Column="1" Margin="10,0,0,0" Width="90"
                    Background="White" BorderBrush="#0078D7" BorderThickness="1" Foreground="#0078D7"
                    Cursor="Hand" Click="BtnMoLink_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Button x:Name="btnGuiYeuCau" Grid.Row="2" Content="GỬI YÊU CẦU DUYỆT" 
                Height="45" Background="#28a745" Foreground="White" FontSize="16" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Click="BtnGuiYeuCau_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>