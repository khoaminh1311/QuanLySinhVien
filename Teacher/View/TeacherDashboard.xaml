<Window x:Class="QuanLySinhVien.Views.Teacher.TeacherDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLySinhVien.Views.Teacher"
        mc:Ignorable="d"
       Title="Giao diện Giảng viên" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFE5E5E5">

    <Grid Margin="0,0,-0.4,59.4" Height="Auto" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <!-- Thanh menu đỏ trên cùng -->
            <RowDefinition Height="70"/>
            <!-- Banner -->
            <RowDefinition Height="150"/>
            <!-- Nội dung chính -->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!-- ===== ROW 0: HEADER ĐỎ ===== -->
        <Grid Grid.Row="0" Background="#CCBF0000" Margin="0,0,-0.4,0.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="432.8"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="303.6"/>
            </Grid.ColumnDefinitions>

            <!-- Logo + tên hệ thống -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0" Height="70">
                <Image Width="50" Height="50" Margin="10" Source="/Teacher/View/image3.jpg" Stretch="Fill"/>
                <TextBlock Text="6 Anh Em Siêu Nhân" Foreground="White" FontSize="26"
               FontWeight="Bold" VerticalAlignment="Center"
               Margin="10,0,0,0"/>
            </StackPanel>


            <!-- Menu ngang -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                <!-- Nút Trang Chủ -->
                <Button Click="btn_trangchu_Click" Padding="12,6" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠Trang chủ" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Button>
                <!-- Nút Thông Báo -->
                <Button Click="btn_noti_Click" Padding="12,6" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔔Thông báo" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Button>
                <!-- Nút Đăng Xuất -->
                <Button Click="btn_logOut_Click" Padding="12,6" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚪Đăng xuất" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Ngôn ngữ / tài khoản -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,27,19.6,27" Height="16" Width="277">
                <TextBlock x:Name="txtTenGV_Header" Text="Giảng viên: "
                           Foreground="White" Margin="0,0,15,0"/>
            </StackPanel>
        </Grid>
        
        <!-- ===== NỘI DUNG CHÍNH ===== -->
        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <!-- Menu trái -->
                <ColumnDefinition Width="280"/>
                <!-- Nội dung phải -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card trắng lớn phía sau -->
            <Border Grid.ColumnSpan="2" Margin="0,0,0,-341"
    Background="White" CornerRadius="4"/>

            <!-- ===== MENU TRÁI ===== -->
            <StackPanel Grid.Column="0" Margin="20,45,10,0">

                <!-- Header tên GV -->
                <Border Background="#FFCC0000" CornerRadius="4" Padding="10">
                    <TextBlock x:Name="txtTenGV_Left"
                       Foreground="White"
                       FontWeight="Bold" FontSize="16"/>
                </Border>
                <!-- KHU MENU GIẢNG VIÊN CÓ SCROLLVIEWER -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              Margin="0,0,0,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- expThongTinGV -->
                            <RowDefinition Height="Auto"/>
                            <!-- expGiangDay -->
                            <RowDefinition Height="Auto"/>
                            <!-- expCoVanCoiThi -->
                            <RowDefinition Height="Auto"/>
                            <!-- expBaiTap -->
                        </Grid.RowDefinitions>

                        <!-- ====== 1) THÔNG TIN GIẢNG VIÊN ====== -->
                        <Expander x:Name="expThongTinGV" Header="Thông tin giảng viên"
                  Margin="0,10,0,0"
                  Background="#FFEDEDED" FontWeight="Bold"
                  Grid.Row="0">
                            <StackPanel Margin="15,5,0,5">
                                <TextBlock Text="Xem profile"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemProfile_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- ====== 2) GIẢNG DẠY ====== -->
                        <Expander x:Name="expGiangDay" Header="Giảng dạy"
                  Margin="0,5,0,0"
                  Background="#FFEDEDED" FontWeight="Bold"
                  Grid.Row="1">
                            <StackPanel Margin="15,5,0,5">
                                <TextBlock Text="Xem lịch dạy"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemLichDay_Click"/>

                                <TextBlock Text="Xem danh sách lớp dạy"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemDanhSachLopDay_Click"/>

                                <TextBlock Text="Quản lí điểm"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="QuanLyDiem_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- ====== 3) CỐ VẤN & COI THI ====== -->
                        <Expander x:Name="expCoVanCoiThi" Header="Cố vấn và Coi thi"
                  Margin="0,5,0,0"
                  Background="#FFEDEDED" FontWeight="Bold"
                  Grid.Row="2">
                            <StackPanel Margin="15,5,0,5">
                                <TextBlock Text="Xem lớp cố vấn"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemDanhSachLopCoVan_Click"/>

                                <TextBlock Text="Xem lịch đi coi thi"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemLichCoiThi_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- ====== 4) BÀI TẬP ====== -->
                        <Expander x:Name="expBaiTap" Header="Bài tập"
                  Margin="0,5,0,0"
                  Background="#FFEDEDED" FontWeight="Bold"
                  Grid.Row="3">
                            <StackPanel Margin="15,5,0,5">
                                <TextBlock x:Name="GiaoBaiTap" Text="Giao bài tập"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="GiaoBaiTap_MouseLeftButtonUp"/>

                                <TextBlock x:Name="QuanLyBaiTap" Text="Quản lí bài tập"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="QuanLyBaiTap_MouseLeftButtonUp"/>

                                <TextBlock x:Name="XemNopBai" Text="Danh sách sinh viên nộp bài"
                           Style="{StaticResource LeftMenuItemStyle}"
                           MouseLeftButtonUp="XemNopBai_MouseLeftButtonUp"/>
                            </StackPanel>
                        </Expander>

                    </Grid>
                </ScrollViewer>
            </StackPanel>
            <!-- ===== NỘI DUNG PHẢI ===== -->
            <Grid Grid.Column="1" Margin="0,45,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ============ GRID 1: NỘI QUY (MẶC ĐỊNH) ============ -->
                <DockPanel Grid.Row="0" Background="#FFF5F5F5" Height="40">
                    <TextBlock x:Name="txtTitle"
                      Text="NỘI QUY SỬ DỤNG HỆ THỐNG CHO GIẢNG VIÊN"
                      Margin="10,0,0,0"
                      VerticalAlignment="Center"
                      FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
VerticalAlignment="Center" Margin="0,0,10,0"/>
                </DockPanel>
                <Grid x:Name="gridNoiQuy" Grid.Row="1" Visibility="Visible">
                    <Border BorderBrush="#FFE0E0E0"
                    BorderThickness="1" Margin="0,5,0,0">
                        <ScrollViewer Margin="9.2,11.2,10.6,8.4">
                            <StackPanel>
                                <TextBlock Text="Khi sử dụng hệ thống myDTU, giảng viên cần tuân thủ các quy định sau:"
                                   TextWrapping="Wrap" Margin="0,0,0,10"
                                   FontWeight="Bold"/>
                                <TextBlock Text="1. Bảo mật thông tin tài khoản, không chia sẻ mật khẩu cho người khác."
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                                <TextBlock Text="2. Cập nhật kịp thời điểm danh, điểm số và nội dung học tập cho sinh viên."
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                                <TextBlock Text="3. Không đăng tải các nội dung vi phạm quy định của nhà trường."
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                                <TextBlock Text="4. Thường xuyên kiểm tra thông báo, lịch dạy và các thay đổi từ phòng Đào tạo."
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
                <!-- ============ GRID 2: THÔNG TIN CÁ NHÂN (ẩn ban đầu) ============ -->
                <Grid x:Name="gridProfile" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0"
                    BorderThickness="1" Margin="0,5,0,0">
                        <ScrollViewer Margin="10.2,10.2,8.6,10">
                            <StackPanel>

                                <!-- HEADER: THÔNG TIN CÁ NHÂN -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="THÔNG TIN CÁ NHÂN"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#C00000"/>
                                </StackPanel>

                                <!-- KHỐI TRÊN: THÔNG TIN + AVATAR -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- BÊN TRÁI: TEXT THÔNG TIN CHUNG -->
                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên Giảng viên:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileFullName" Grid.Row="0" Grid.Column="2" Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Mã Giảng viên:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileTeacherId" Grid.Row="1" Grid.Column="2"
                                           Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileGender" Grid.Row="2" Grid.Column="2"
                                           Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileEmail" Grid.Row="3" Grid.Column="2" Text="3/2/2005"
                                           Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Số điện thoại:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfilePhone" Grid.Row="4" Grid.Column="2"
                                           Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Địa chỉ:"
                                           FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileAddress" Grid.Row="5" Grid.Column="2"
                                           Margin="0,0,0,3"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Khoa:"
                                            FontWeight="Bold" Margin="0,0,0,3"/>
                                        <TextBlock x:Name="txtProfileFaculty" Grid.Row="6" Grid.Column="2"
                                            Margin="0,0,0,3"/>
                                    </Grid>

                                    <!-- BÊN PHẢI: AVATAR -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <Border x:Name="imgAvatar" Width="155" Height="185"
                                        BorderBrush="#C00000" BorderThickness="2"
                                        Margin="0,0,0,5"/>
                                        <Button x:Name="btn_changeAvatar" Content="Thay đổi Avatar"
                                        Padding="10,4" HorizontalAlignment="Center" Click="btn_changeAvatar_Click"/>
                                        <TextBlock Text="(Kích thước tốt nhất là cao 155px, rộng 147px)"
                                           FontSize="11" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    </StackPanel>

                                </Grid>
                                <Button x:Name="btnUpdateProfile" Click="btnUpdateProfile_Click" Content="CẬP NHẬT"
                                        Width="160"
                                        Height="38"
                                        HorizontalAlignment="Center"
                                        Margin="0,20,0,10"
                                        Background="#C00000"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="18">
                                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- FORM CẬP NHẬT - ẨN MẶC ĐỊNH -->
                                <Border x:Name="gridUpdateProfile"
                                        Visibility="Collapsed"
                                        Margin="0,20,0,0"
                                        Background="#FFF9F9F9"
                                        Padding="15"
                                        BorderBrush="#FFC00000"
                                        BorderThickness="1"
                                        CornerRadius="8">

                                    <StackPanel>
                                        <TextBlock Text="CHỈNH SỬA THÔNG TIN"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#C00000"
                                                   Margin="0,0,0,10"/>

                                        <!-- Họ tên -->
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="Họ và tên:" FontWeight="Bold"/>
                                            <TextBox x:Name="txtEditFullName" Height="28"/>
                                        </StackPanel>

                                        <!-- Giới tính -->
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="Giới tính:" FontWeight="Bold"/>
                                            <ComboBox x:Name="cbEditGender" Height="28">
                                                <ComboBoxItem Content="Nam"/>
                                                <ComboBoxItem Content="Nữ"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Email -->
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="Email:" FontWeight="Bold"/>
                                            <TextBox x:Name="txtEditEmail" Height="28"/>
                                        </StackPanel>

                                        <!-- Địa chỉ -->
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="Địa chỉ:" FontWeight="Bold"/>
                                            <TextBox x:Name="txtEditAddress" Height="28"/>
                                        </StackPanel>

                                        <!-- Khoa -->
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="Khoa:" FontWeight="Bold"/>
                                            <TextBox x:Name="txtEditFaculty" Height="28"></TextBox>
                                        </StackPanel>


                                        <!-- Bộ nút -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                            <Button x:Name="btnSaveProfile"
                                                    Content="Cập nhật"
                                                    Width="120"
                                                    Margin="10,0"
                                                    Background="#C00000"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Click="btnSaveProfile_Click"/>

                                            <Button x:Name="btnCancelProfile"
                                                    Content="Hủy bỏ"
                                                    Width="120"
                                                    Margin="10,0"
                                                    Background="Gray"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    Click="btnCancelProfile_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
                <!-- ============ GRID 3: XEM LỊCH DẠY ============ -->
                <Grid x:Name="gridLichDay" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Bộ lọc -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Học kỳ:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <ComboBox x:Name="cbx_hockilichday"
                          Width="120"
                          SelectionChanged="cbx_hockilichday_SelectionChanged_1"/>

                                <TextBlock Text="Năm:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                                <ComboBox x:Name="cbx_namlichday"
                          Width="120"
                          SelectionChanged="cbx_namlichday_SelectionChanged_1"/>
                              <!--  <Button x:Name="btn_timlichday" Content="Tìm" Width="70" Margin="10,0,0,0" Click="btn_timlichday_Click"/> -->
                            </StackPanel>

                            <!-- DataGrid lịch dạy -->
                            <DataGrid x:Name="dataGridLichDay"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Visibility="Collapsed">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã lớp" Binding="{Binding CourseClassId}" Width="*"/>
                                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding CourseId}" Width="*"/>
                                    <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" Width="*"/>
                                    <DataGridTextColumn Header="Lịch học" Binding="{Binding LearnSchedule}" Width="*"/>
                                    <DataGridTextColumn Header="Sĩ số" Binding="{Binding Capacity}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Border>
                </Grid>

                <!-- ============ GRID 4: DANH SÁCH LỚP DẠY ============ -->
                <Grid x:Name="gridDanhSachLopDay" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Bộ lọc -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">

                                <TextBlock Text="Học kỳ:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <ComboBox x:Name="cbx_hockilopday"
                          Width="120"
                          SelectionChanged="cbx_hockilopday_SelectionChanged_1"/>

                                <TextBlock Text="Năm:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                                <ComboBox x:Name="cbx_namlopday"
                          Width="120"
                          SelectionChanged="cbx_namlopday_SelectionChanged"/>
                              <!--  <Button x:Name="btn_timlopday" Content="Tìm" Width="70" Margin="10,0,0,0" Click="btn_timlopday_Click"/> -->
                            </StackPanel>

                            <!-- DataGrid danh sách lớp -->
                            <DataGrid x:Name="dataGridLopDay"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Visibility="Collapsed">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã lớp" Binding="{Binding CourseClassId}" Width="*"/>
                                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding CourseId}" Width="*"/>
                                    <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" Width="*"/>
                                    <DataGridTextColumn Header="Lịch học" Binding="{Binding LearnSchedule}" Width="*"/>
                                    <DataGridTextColumn Header="Sĩ số" Binding="{Binding Capacity}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Border>
                </Grid>

                <!-- ============ GRID 5: QUẢN LÝ ĐIỂM ============ -->
                <Grid x:Name="gridQuanLyDiem" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0"
            BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Thanh filter phía trên SelectedIndex="0"-->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Học kỳ:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <ComboBox x:Name="cbSemester" SelectionChanged="cbSemester_SelectionChanged"  Width="140">
                                </ComboBox>

                                <TextBlock Text="   Lớp:" VerticalAlignment="Center" Margin="10,0,4,0"/>
                                <ComboBox x:Name="cbClass"  Width="180" SelectionChanged="cbClass_SelectionChanged">
                                </ComboBox>
                            </StackPanel>
                            <Button x:Name="btn_saveGrades" Content="Lưu điểm"
                                    DockPanel.Dock="Top"
                                    Width="120"
                                    Height="30"
                                    Margin="10,0,0,0"
                                    Click="Btn_saveGrades_Click"
                                    Background="#C00000"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                            <!-- Bảng điểm -->
                            <DataGrid x:Name="dataGridDiem" AutoGenerateColumns="False" DockPanel.Dock="Top" Visibility="Collapsed">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="MSSV" Binding="{Binding StudentId}" Width="*"/>
                                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                                    <DataGridTextColumn Header="Điểm danh" Binding="{Binding Attendance}" Width="*"/>
                                    <DataGridTextColumn Header="Giữa kì" Binding="{Binding MidTerm}" Width="*"/>
                                    <DataGridTextColumn Header="Cuối kì" Binding="{Binding FinalTerm}" Width="*"/>
                                    <DataGridTextColumn Header="Tổng kết" Binding="{Binding Total}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </DockPanel>
                    </Border>
                </Grid>
                <!-- ============ GRID 6: DANH SÁCH LỚP CỐ VẤN ============ -->
                <Grid x:Name="gridLopCoVan" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0"
            BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">
                            <!-- DataGrid danh sách lớp -->
                            <DataGrid x:Name="dataGridLopCoVan"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      DockPanel.Dock="Bottom">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="MSSV" Binding="{Binding StudentId}" Width="*"/>
                                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="*"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                    <DataGridTextColumn Header="Khóa" Binding="{Binding Khoa}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Border>
                </Grid>
                <!-- ============ GRID 7: LỊCH ĐI COI THI ============ -->
                <Grid x:Name="gridLichCoiThi" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#FFE0E0E0"
            BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Filter nhỏ -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Đợt thi:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            </StackPanel>

                            <!-- Bảng lịch coi thi -->
                            <DataGrid x:Name="dataGridLichCoiThi"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False" GridLinesVisibility="All">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Exam ID" Binding="{Binding ExamId}" Width="*"/>
                                    <DataGridTextColumn Header="Lớp thi" Binding="{Binding CourseClassId}" Width="*"/>
                                    <DataGridTextColumn Header="Thời gian" Binding="{Binding Schedule}" Width="*"/>
                                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
                                    <DataGridTextColumn Header="Số SV" Binding="{Binding StudentCount}" Width="*"/>
                                </DataGrid.Columns>

                            </DataGrid>

                        </DockPanel>
                    </Border>
                </Grid>
                <!-- ============ GRID 8: DANH SÁCH THÔNG BÁO ============ -->
                <Grid x:Name="gridNotification" Grid.Row="1" Visibility="Collapsed">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Tiêu đề -->
                        <RowDefinition Height="*"/>
                        <!-- Scroll -->
                    </Grid.RowDefinitions>

                    <!-- TIÊU ĐỀ -->
                    <TextBlock Text="THÔNG BÁO"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#C00000"
               Margin="0,0,0,10"
               Grid.Row="0"/>

                    <!-- KHUNG CHÍNH -->
                    <Border Grid.Row="1"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            Margin="0,5,0,0">

                        <!-- SCROLLVIEWER -->
                        <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto">

                            <ListView x:Name="listNotification">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#DDD"
                                BorderThickness="1"
                                Padding="10"
                                Margin="0,0,0,10"
                                CornerRadius="5">

                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}"
                                           FontSize="15"
                                           FontWeight="Bold"/>

                                                <TextBlock Text="{Binding Date}"
                                           FontSize="11"
                                           Foreground="Gray"
                                           Margin="0,2,0,5"/>

                                                <TextBlock Text="{Binding Content}"
                                           TextWrapping="Wrap"
                                           FontSize="13"/>
                                            </StackPanel>

                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </ScrollViewer>
                    </Border>

                </Grid>
                <!-- ============ GRID 9: THÊM BÀI TẬP ============ -->
                <Grid x:Name="gridGiaoBaiTap" Grid.Row="1" Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">

                            <TextBlock Text="GIAO BÀI TẬP"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#C00000"
                       Margin="0,0,0,20"/>

                            <!-- Chọn lớp -->
                            <TextBlock Text="Chọn lớp:"/>
                            <ComboBox x:Name="cbGiaoBT_Class" Height="30" Margin="0,5,0,15"/>

                            <!-- Nội dung -->
                            <TextBlock Text="Nội dung bài tập:"/>
                            <TextBox x:Name="txtGiaoBT_Content"
                     AcceptsReturn="True"
                     Height="120"
                     TextWrapping="Wrap"
                     Margin="0,5,0,15"/>

                            <!-- Ngày bắt đầu -->
                            <TextBlock Text="Ngày bắt đầu:"/>
                            <DatePicker x:Name="dpGiaoBT_Start" Margin="0,5,0,15"/>

                            <!-- Ngày kết thúc -->
                            <TextBlock Text="Ngày kết thúc:"/>
                            <DatePicker x:Name="dpGiaoBT_End" Margin="0,5,0,25"/>

                            <Button x:Name="btnGiaoBai"
                    Content="Giao bài tập"
                    Background="#C00000"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Width="150"
                    HorizontalAlignment="Left"
                    Click="BtnGiaoBai_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                <!-- ============ GRID 10: QUẢN LÍ BÀI TẬP ============ -->
                <Grid x:Name="gridQuanLyAssignment" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderThickness="1" BorderBrush="#E0E0E0" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Thanh nút -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="btnEditAssign" Content="Sửa"
                        Width="100" Margin="0,0,10,0"
                        Click="btnEditAssign_Click"/>
                                <Button x:Name="btnDeleteAssign" Content="Xóa"
                        Width="100" Margin="0,0,10,0"
                        Click="btnDeleteAssign_Click"/>
                                <Button x:Name="btnSaveAssign" Content="Lưu"
                        Width="100"
                        Click="btnSaveAssign_Click"/>
                            </StackPanel>

                            <!-- Bảng -->
                            <DataGrid x:Name="dataGridAssignment"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Header="Class" Binding="{Binding CourseClassId}" Width="*"/>
                                    <DataGridTextColumn Header="Nội dung" Binding="{Binding Content}" Width="*"/>
                                    <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate}" Width="*"/>
                                    <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding EndDate}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </DockPanel>
                    </Border>
                </Grid>
                <!-- ============ GRID 11: QUẢN LÍ SINH VIÊN NỘP BÀI TẬP ============ -->
                <Grid x:Name="gridXemNopBai" Grid.Row="1" Visibility="Collapsed">
                    <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,5,0,0">
                        <DockPanel Margin="10">

                            <!-- Combobox chọn bài -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Chọn bài tập:"
                           VerticalAlignment="Center"/>
                                <ComboBox x:Name="cbAssignmentList"
                          Width="300" Margin="10,0,0,0"
                          SelectionChanged="cbAssignmentList_SelectionChanged"
                          DisplayMemberPath="Content"
                          SelectedValuePath="Id"/>
                            </StackPanel>

                            <!-- Grid danh sách đã nộp -->
                            <DataGrid x:Name="dataGridStudentSubmit"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="MSSV" Width="*"
                                        Binding="{Binding StudentId}"/>
                                    <DataGridTextColumn Header="Họ tên" Width="*"
                                        Binding="{Binding FullName}"/>
                                    <DataGridTextColumn Header="Email" Width="*"
                                        Binding="{Binding Email}"/>
                                    <DataGridTextColumn Header="Nội dung nộp" Width="*"
                                        Binding="{Binding SubmitContent}"/>
                                    <DataGridTextColumn Header="Ngày nộp" Width="*"
                                        Binding="{Binding SubmitDate}"/>
                                </DataGrid.Columns>

                            </DataGrid>

                        </DockPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
    </Grid>

</Window>
