<Window x:Class="Management_system.EditAdvisorClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditAdvisorClassWindow" Height="491.213" Width="800">
    <Grid>
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CẬP NHẬT LỚP CỐ VẤN"
                           FontSize="28" FontWeight="Bold"
                           Foreground="#B00020" Grid.Row="0"
                           HorizontalAlignment="Center"/>

                <!-- ĐÃ ĐỔI StackPanel -> Grid 2 cột -->
                <Grid Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="0,10,0,4"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#0275d8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,20,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </Grid.Resources>

                    <!-- Định nghĩa 2 cột: Label + Input -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Các hàng: 4 trường + 1 hàng nút -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Hàng 0: Mã giảng viên -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã giảng viên (không sửa):"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="txtTeacherId"
                             Style="{StaticResource InputStyle}"
                             IsEnabled="False"
                             Margin="5"/>

                    <!-- Hàng 1: Họ tên giảng viên -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Họ tên giảng viên:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             x:Name="txtFullName"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 2: Khóa -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Khóa:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             x:Name="txtKhoa"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 3: Lớp cố vấn -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Lớp cố vấn:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             x:Name="txtAdvisorClass"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 4: Nút Cập nhật -->
                    <Button Grid.Row="4" Grid.ColumnSpan="2"
                            Content="Cập nhật"
                            Style="{StaticResource SaveButton}"
                            HorizontalAlignment="Right"
                            Click="BtnSave_Click" Margin="0,20.2,0.2,0" Width="731"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
