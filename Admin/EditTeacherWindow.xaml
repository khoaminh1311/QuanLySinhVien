<Window x:Class="Management_system.EditTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditTeacherWindow" Height="600" Width="800">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CẬP NHẬT THÔNG TIN GIẢNG VIÊN"
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#B00020" Grid.Row="0"
                   Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">
                    <StackPanel.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="0,10,0,4"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#0275d8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,20,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </StackPanel.Resources>

                    <TextBlock Text="Mã giảng viên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtID" Style="{StaticResource InputStyle}" IsReadOnly="True"/>

                    <TextBlock Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtName" Style="{StaticResource InputStyle}"/>

                    <TextBlock Text="Giới tính:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cbGender" Height="35" Margin="0,0,0,10">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>

                    <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource InputStyle}"/>

                    <TextBlock Text="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtPhone" Style="{StaticResource InputStyle}"/>

                    <TextBlock Text="Địa chỉ:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtAddress" Style="{StaticResource InputStyle}"/>

                    <TextBlock Text="Khoa:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtFaculty" Style="{StaticResource InputStyle}"/>

                    <Button Content="Lưu thay đổi"
                            Style="{StaticResource SaveButton}"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
