<Window x:Class="Management_system.EditTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditTeacherWindow" Height="600" Width="800">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CẬP NHẬT THÔNG TIN GIẢNG VIÊN"
                           FontSize="28" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#B00020" Grid.Row="0"
                           Margin="0,0,0,20"/>

                <!-- FORM: đổi StackPanel -> Grid 2 cột -->
                <Grid Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="0,10,0,4"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#0275d8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,20,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </Grid.Resources>

                    <!-- 2 cột: Label + Input -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 7 trường + 1 hàng nút -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 0: Mã giảng viên -->
                        <RowDefinition Height="Auto"/>
                        <!-- 1: Họ tên -->
                        <RowDefinition Height="Auto"/>
                        <!-- 2: Giới tính -->
                        <RowDefinition Height="Auto"/>
                        <!-- 3: Email -->
                        <RowDefinition Height="Auto"/>
                        <!-- 4: Số điện thoại -->
                        <RowDefinition Height="Auto"/>
                        <!-- 5: Địa chỉ -->
                        <RowDefinition Height="Auto"/>
                        <!-- 6: Khoa -->
                        <RowDefinition Height="Auto"/>
                        <!-- 7: Nút -->
                    </Grid.RowDefinitions>

                    <!-- Hàng 0: Mã giảng viên -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã giảng viên:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="txtID"
                             Style="{StaticResource InputStyle}"
                             IsReadOnly="True"
                             Margin="5"/>

                    <!-- Hàng 1: Họ tên -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Họ tên:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             x:Name="txtName"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 2: Giới tính -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Giới tính:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              x:Name="cbGender"
                              Height="35"
                              Margin="5">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                    </ComboBox>

                    <!-- Hàng 3: Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Email:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             x:Name="txtEmail"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 4: Số điện thoại -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Số điện thoại:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             x:Name="txtPhone"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 5: Địa chỉ -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Địa chỉ:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                             x:Name="txtAddress"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 6: Khoa -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Khoa:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="6" Grid.Column="1"
                             x:Name="txtFaculty"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 7: Nút Lưu thay đổi -->
                    <Button Grid.Row="7" Grid.ColumnSpan="2"
                            Content="Lưu thay đổi"
                            Style="{StaticResource SaveButton}"
                            HorizontalAlignment="Right"
                            Click="BtnSave_Click" Margin="0,20.4,0.2,-0.2" Width="691"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
