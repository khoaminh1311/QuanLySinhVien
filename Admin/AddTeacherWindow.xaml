<Window x:Class="Management_system.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="AddTeacherWindow" Height="600" Width="800">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>

            <Grid>

                <!-- TITLE -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="THÊM GIẢNG VIÊN"
                           FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#B00020" Grid.Row="0"
                           Margin="0,0,0,20"/>

                <!-- ======================= -->
                <!-- FORM 2 CỘT CHUẨN       -->
                <!-- ======================= -->
                <Grid Grid.Row="1" Margin="0,10,0,0">

                    <!-- 2 CỘT -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 8 HÀNG -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- STYLE -->
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="5,20,5,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Grid.Resources>

                    <!-- ======= CÁC TRƯỜNG NHẬP ======= -->

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã giảng viên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtID" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtName" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              x:Name="cbGender"
                              Margin="5"
                              Height="35">
                        <ComboBoxItem Content="Nam"/>
                        <ComboBoxItem Content="Nữ"/>
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtEmail" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtPhone" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Địa chỉ:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtAddress" Style="{StaticResource InputStyle}"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Khoa:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtFaculty" Style="{StaticResource InputStyle}"/>

                    <!-- BUTTON -->
                    <Button Grid.Row="7"
                            Content="Lưu"
                            Style="{StaticResource SaveButton}"
                            Click="BtnSave_Click" Grid.ColumnSpan="2" Margin="10,20.6,5.2,1.2"/>

                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
