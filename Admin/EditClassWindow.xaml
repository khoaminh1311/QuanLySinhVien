<Window x:Class="Management_system.EditClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditClassWindow" Height="800" Width="800">
    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SỬA LỚP HỌC PHẦN"
                           FontSize="28" FontWeight="Bold"
                           Foreground="#B00020" Grid.Row="0"
                           HorizontalAlignment="Center"/>

                <!-- ĐỔI StackPanel -> Grid 2 cột -->
                <Grid Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="0,10,0,4"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#0275d8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,20,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </Grid.Resources>

                    <!-- 2 cột: Label + Input -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 10 trường + 1 hàng nút -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 0: Mã lớp -->
                        <RowDefinition Height="Auto"/>
                        <!-- 1: Mã môn -->
                        <RowDefinition Height="Auto"/>
                        <!-- 2: Phòng -->
                        <RowDefinition Height="Auto"/>
                        <!-- 3: Lịch học -->
                        <RowDefinition Height="Auto"/>
                        <!-- 4: Thời lượng -->
                        <RowDefinition Height="Auto"/>
                        <!-- 5: Kỳ học -->
                        <RowDefinition Height="Auto"/>
                        <!-- 6: Năm -->
                        <RowDefinition Height="Auto"/>
                        <!-- 7: Trạng thái -->
                        <RowDefinition Height="Auto"/>
                        <!-- 8: Số lượng -->
                        <RowDefinition Height="Auto"/>
                        <!-- 9: Lịch thi -->
                        <RowDefinition Height="Auto"/>
                        <!-- 10: Nút -->
                    </Grid.RowDefinitions>

                    <!-- Hàng 0: Mã lớp học phần -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã lớp học phần:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="txtClassId"
                             Style="{StaticResource InputStyle}"
                             IsEnabled="False"
                             Margin="5"/>

                    <!-- Hàng 1: Mã môn -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Mã môn:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             x:Name="txtCourseId"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 2: Phòng -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Phòng:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             x:Name="txtRoom"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 3: Lịch học -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Lịch học:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             x:Name="txtSchedule"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 4: Thời lượng -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Thời lượng:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             x:Name="txtDuration"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 5: Kỳ học -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Kỳ học:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                             x:Name="txtSemester"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 6: Năm -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Năm:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="6" Grid.Column="1"
                             x:Name="txtYear"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 7: Trạng thái -->
                    <TextBlock Grid.Row="7" Grid.Column="0"
                               Text="Trạng thái:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="7" Grid.Column="1"
                             x:Name="txtStatus"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 8: Số lượng -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                               Text="Số lượng:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="8" Grid.Column="1"
                             x:Name="txtCapacity"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 9: Lịch thi -->
                    <TextBlock Grid.Row="9" Grid.Column="0"
                               Text="Lịch thi:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="9" Grid.Column="1"
                             x:Name="txtExamSchedule"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 10: Nút Cập nhật -->
                    <Button Grid.Row="10" Grid.ColumnSpan="2"
                            Content="Cập nhật"
                            Style="{StaticResource SaveButton}"
                            HorizontalAlignment="Right"
                            Click="BtnSave_Click" Margin="0,20.2,0.2,0" Width="731"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
