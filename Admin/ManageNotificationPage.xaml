<Page x:Class="Management_system.Pages.ManageNotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageNotificationPage"
      Background="White">

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="QUẢN LÝ THÔNG BÁO"
                   FontSize="28" FontWeight="Bold"
                   Foreground="#B00020" Grid.Row="0"
                   HorizontalAlignment="Center"/>

                <!-- Thanh công cụ -->
                <StackPanel Orientation="Horizontal" Grid.Row="1">

                    <Button Width="110" Padding="10,3" Margin="0,0,10,0"
                            Background="#2196F3" Foreground="White"
                            Cursor="Hand" BorderThickness="0"
                            Click="BtnAdd_Click" Height="32" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Plus" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Thêm"/>
                        </StackPanel>
                    </Button>

                    <Button Width="110" Padding="10,3"
                            Background="#4CAF50" Foreground="White"
                            Cursor="Hand" BorderThickness="0"
                            Click="BtnSearch_Click" Height="32" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Search" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Tìm kiếm"/>
                        </StackPanel>
                    </Button>

                    <TextBox x:Name="txtSearch" Width="465" Height="32"
                                Margin="10,0,0,0"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dtgNotification"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  ColumnWidth="Auto"
                  HorizontalAlignment="Left"
                  HorizontalContentAlignment="Left"
                  RowHeight="35"
                  IsReadOnly="True" Margin="0,10,0,0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}"/>
                        <DataGridTextColumn Header="Tiêu đề" Width="100" Binding="{Binding title}"/>
                        <DataGridTextColumn Header="Nội dung" Width="200" Binding="{Binding content}"/>
                        <DataGridTextColumn Header="Ngày tạo" Width="150" Binding="{Binding date}"/>
                        <DataGridTextColumn Header="Đối tượng" Binding="{Binding target}" Width="150"/>


                        <DataGridTemplateColumn Header="Action" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                        <!-- Xóa -->
                                        <Button Background="#d9534f"
                                                Foreground="White"
                                                Padding="5,2"
                                                Margin="5,0"
                                                Click="BtnDelete_Click"
                                                Cursor="Hand"
                                                BorderThickness="0">
                                            <fa:FontAwesome Icon="Trash" Width="16" Height="16"/>
                                        </Button>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>

                </DataGrid>
            </Grid>
        </Border>

    </Grid>

</Page>
