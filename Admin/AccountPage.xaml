<Page x:Class="Management_system.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Management_system.Pages"
      mc:Ignorable="d" 
      Title="AccountPage"
      Background="White">

    <Grid Margin="40, 30">
        <Border Background="White"
                CornerRadius="12"
                Padding="25"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{DynamicResource CardShadow}">

            <Border.Resources>
                <DropShadowEffect x:Key="CardShadow"
                                  Color="#000000"
                                  BlurRadius="18"
                                  ShadowDepth="3"
                                  Opacity="0.25"/>
            </Border.Resources>

            <StackPanel>
                <TextBlock Text="Thông Tin Tài Khoản Admin"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#B00020"
                           Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CHỈ XEM AVATAR -->
                    <StackPanel Grid.Column="0" Margin="0, 0, 25, 0" HorizontalAlignment="Center">
                        <Ellipse Width="180" Height="180" Stroke="#CCCCCC" StrokeThickness="2"
                                 Margin="0,15,0,15" x:Name="imgAvatar"/>
                    </StackPanel>
                    <Button Content="Chỉnh sửa thông tin cá nhân" 
        HorizontalAlignment="Left"
        Click="EditInfo_Click"
        Background="#3498DB" Foreground="White" 
        Padding="10" Margin="29,201,0,9.6" 
        FontWeight="SemiBold" Cursor="Hand" Width="147"/>
                    <!-- THÔNG TIN -->
                    <StackPanel Grid.Column="1">

                        <StackPanel.Resources>
                            <Style x:Key="InfoRow" TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal"/>
                                <Setter Property="Margin" Value="0,10"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>

                            <Style x:Key="LabelStyle" TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Width" Value="160"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>

                            <Style x:Key="ValueStyle" TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#444"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>
                        </StackPanel.Resources>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="User" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Mã Admin:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding AdminId}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="UserCircle" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Tên Admin:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding AdminName}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="VenusMars" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Giới tính:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Gender}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="Envelope" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Email}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="Phone" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Phone}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <StackPanel Style="{StaticResource InfoRow}">
                            <fa:ImageAwesome Icon="Home" Width="15" Foreground="#555" Margin="0 0 5 0"/>
                            <TextBlock Text="Địa chỉ:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Address}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
