<Window x:Class="Management_system.AddExamScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="AddExamScheduleWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- nội dung -->
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ -->
        <TextBlock Text="THÊM LỊCH THI"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#B00020"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- KHỐI NỘI DUNG -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">

            <StackPanel.Resources>
                <!-- GIỮ NGUYÊN TOÀN BỘ STYLE NHƯ BẠN -->
                <Style TargetType="TextBlock" x:Key="LabelStyle">
                    <Setter Property="Margin" Value="0,10,0,4"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Foreground" Value="#333"/>
                </Style>

                <Style TargetType="TextBox" x:Key="InputStyle">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="Background" Value="#FAFAFA"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                </Style>

                <Style TargetType="Button" x:Key="SaveButton">
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="FontSize" Value="17"/>
                    <Setter Property="Background" Value="#28A745"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Margin" Value="0,20,0,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2ECC71"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

            </StackPanel.Resources>

            <!-- ===================== -->
            <!-- FORM 2 CỘT CHUẨN     -->
            <!-- ===================== -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <!-- cột label -->
                    <ColumnDefinition Width="*"/>
                    <!-- cột input -->
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- MÃ LỊCH THI -->
                <TextBlock Text="Mã lịch thi:"
                       Style="{StaticResource LabelStyle}"
                       Margin="5"
                       Grid.Row="0" Grid.Column="0"/>

                <TextBox x:Name="txtID"
                     Style="{StaticResource InputStyle}"
                     Margin="5"
                     Grid.Row="0" Grid.Column="1"/>

                <!-- MÃ LỚP HỌC PHẦN -->
                <TextBlock Text="Mã lớp học phần:"
                       Style="{StaticResource LabelStyle}"
                       Margin="5"
                       Grid.Row="1" Grid.Column="0"/>

                <ComboBox x:Name="cmbCourseClass"
                      Height="35"
                      Margin="5"
                      Grid.Row="1" Grid.Column="1"/>

                <!-- LỊCH THI -->
                <TextBlock Text="Lịch thi:"
                       Style="{StaticResource LabelStyle}"
                       Margin="5"
                       Grid.Row="2" Grid.Column="0"/>

                <TextBox x:Name="txtSchedule"
                     Style="{StaticResource InputStyle}"
                     Margin="5"
                     Grid.Row="2" Grid.Column="1"/>
            </Grid>

            <!-- BUTTON LƯU -->
            <Button Content="Lưu"
                Style="{StaticResource SaveButton}"
                Click="BtnSave_Click" Height="36" Margin="50,20,50,0"/>
        </StackPanel>
    </Grid>

</Window>
