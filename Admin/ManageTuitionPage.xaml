<Page x:Class="Management_system.ManageTuitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Management_system"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="ManageTuitionPage"
      Background="White">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="QUẢN LÝ HỌC PHÍ"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#B00020"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Margin="0,0,0,20"/>

                <!-- Thanh công cụ -->
                <StackPanel Orientation="Horizontal" Grid.Row="1">

                    <Button Width="110" Padding="10,3"
                            Background="#4CAF50" Foreground="White"
                            Cursor="Hand" BorderThickness="0"
                            Click="BtnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Search" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Tìm kiếm"/>
                        </StackPanel>
                    </Button>

                    <TextBox x:Name="txtSearch" Width="465" Height="32"
                                Margin="10,0,0,0"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dtgTuition"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  ColumnWidth="Auto"
                  HorizontalAlignment="Left"
                  HorizontalContentAlignment="Left"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  Margin="0,10,0,10"
                  IsReadOnly="True" 
                  BorderBrush="#EEEEEE">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Width="30" Binding="{Binding STT}"/>
                        <DataGridTextColumn Header="MSSV" Width="100" Binding="{Binding student_id}"/>
                        <DataGridTextColumn Header="Họ tên sinh viên" Width="*" Binding="{Binding full_name}"/>
                        <DataGridTextColumn Header="Trạng thái" Width="*" Binding="{Binding tuitionStatus}"/>
                        <DataGridTemplateColumn Header="Hóa đơn" Width="*" IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Ảnh nhỏ -->
                                    <Button Click="Bill_Click" Padding="0" BorderThickness="0" Background="Transparent">
                                        <Image Width="40" Height="40" Stretch="Uniform" Source="{Binding bill_url}" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Action -->
                        <DataGridTemplateColumn Header="Action" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Xác nhận" Background="LightGreen"
                                        Foreground="White" Padding="5"
                                        Margin="5,5" Width="80"
                                        Tag="{Binding STT}"
                                        Click="BtnConfirm_Click"/>

                                        <Button Content="Từ chối" Background="Salmon"
                                        Foreground="White" Padding="5"
                                        Margin="5,5" Width="80"
                                        Tag="{Binding STT}"        
                                        Click="BtnRefuse_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Border>
    </Grid>
</Page>
