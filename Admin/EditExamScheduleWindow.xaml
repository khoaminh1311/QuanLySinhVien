<Window x:Class="Management_system.EditExamScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="EditExamScheduleWindow" Height="450" Width="800">
    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CẬP NHẬT LỊCH THI"
                           FontSize="28" FontWeight="Bold"
                           Foreground="#B00020" Grid.Row="0"
                           HorizontalAlignment="Center"/>

                <!-- ĐỔI StackPanel -> Grid 2 cột -->
                <Grid Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Top">
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="0,10,0,4"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                        </Style>

                        <!-- Input -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#0275d8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="0,20,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>

                        </Style>

                    </Grid.Resources>

                    <!-- 2 cột: Label + Input -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 3 trường + 1 hàng nút -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 0: Mã lịch thi -->
                        <RowDefinition Height="Auto"/>
                        <!-- 1: Mã lớp học phần -->
                        <RowDefinition Height="Auto"/>
                        <!-- 2: Lịch thi -->
                        <RowDefinition Height="Auto"/>
                        <!-- 3: Nút -->
                    </Grid.RowDefinitions>

                    <!-- Hàng 0: Mã lịch thi -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Mã lịch thi:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="txtID"
                             Style="{StaticResource InputStyle}"
                             IsReadOnly="True"
                             Background="#EEE"
                             Margin="5"/>

                    <!-- Hàng 1: Mã lớp học phần -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Mã lớp học phần:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              x:Name="cmbCourseClass"
                              Height="35"
                              Margin="5"
                              HorizontalAlignment="Stretch"/>

                    <!-- Hàng 2: Lịch thi -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Lịch thi:"
                               Style="{StaticResource LabelStyle}"
                               Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             x:Name="txtSchedule"
                             Style="{StaticResource InputStyle}"
                             Margin="5"/>

                    <!-- Hàng 3: Nút Cập nhật (span 2 cột) -->
                    <Button Grid.Row="3" Grid.ColumnSpan="2"
                            Content="Cập nhật"
                            Style="{StaticResource SaveButton}"
                            HorizontalAlignment="Right"
                            Click="BtnSave_Click" Margin="0,20.4,0.2,-0.2" Width="726"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
