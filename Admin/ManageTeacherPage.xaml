<Page x:Class="Management_system.ManageTeacherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:Management_system"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="ManageTeacherPage"
      Background="White">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1" Margin="0,0,-30,-0.4">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="3" Opacity="0.22"/>
            </Border.Effect>
            <Grid>
                <!-- Tạo bố cục 3 hàng -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Thanh công cụ -->
                    <RowDefinition Height="Auto"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="*"/>
                    <!-- Form nhập liệu -->
                </Grid.RowDefinitions>

                <!-- TIÊU ĐỀ -->
                <TextBlock Text="QUẢN LÝ GIẢNG VIÊN"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#B00020"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1">

                    <Button Width="110" Padding="10,3" Margin="0,0,10,0"
                            Background="#2196F3" Foreground="White"
                            Cursor="Hand" BorderThickness="0"
                            Click="BtnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Plus" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Thêm"/>
                        </StackPanel>
                    </Button>

                    <Button Width="110" Padding="10,3"
                            Background="#4CAF50" Foreground="White"
                            Cursor="Hand" BorderThickness="0"
                            Click="BtnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Search" Width="14" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="Tìm kiếm"/>
                        </StackPanel>
                    </Button>

                    <TextBox x:Name="txtSearch" Width="670" Height="32"
                                Margin="10,0,0,0.8"/>
                </StackPanel>
                <DataGrid x:Name="dtgTeacher"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          ColumnWidth="Auto"
                          HorizontalAlignment="Left"
                          HorizontalContentAlignment="Left"
                          HeadersVisibility="Column"
                          RowHeight="40"
                          Margin="0,10,0,10"
                          IsReadOnly="True">

                    <DataGrid.Columns>

                        <!-- STT -->
                        <DataGridTextColumn Header="STT" Width="50" Binding="{Binding STT}"/>

                        <DataGridTextColumn Header="MGV" Width="100" Binding="{Binding teacher_id}"/>
                        <DataGridTextColumn Header="Họ tên" Width="150" Binding="{Binding full_name}"/>
                        <DataGridTextColumn Header="Giới tính" Width="100" Binding="{Binding gender}"/>
                        <DataGridTextColumn Header="Email" Width="150" Binding="{Binding email}"/>
                        <DataGridTextColumn Header="SDT" Width="100" Binding="{Binding phone}"/>
                        <DataGridTextColumn Header="Khoa" Width="150" Binding="{Binding faculty}"/>

                        <!-- Chi tiết -->
                        <DataGridTemplateColumn Header="Chi tiết" Width="95">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="#0094FF"
                                            Foreground="White"
                                            Padding="5,2"
                                            Margin="5"
                                            Cursor="Hand"
                                            Click="BtnDetail_Click"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:FontAwesome Icon="InfoCircle" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Chi tiết"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <!-- Action -->
                        <DataGridTemplateColumn Header="Action" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                        <!-- Sửa -->
                                        <Button Background="#0275d8"
                                                Foreground="White"
                                                Padding="5,2"
                                                Margin="5,0"
                                                Click="BtnEdit_Click"
                                                Cursor="Hand"
                                                BorderThickness="0">
                                            <fa:FontAwesome Icon="Edit" Width="16" Height="16"/>
                                        </Button>

                                        <!-- Xóa -->
                                        <Button Background="#d9534f"
                                                Foreground="White"
                                                Padding="5,2"
                                                Margin="5,0"
                                                Click="BtnDelete_Click"
                                                Cursor="Hand"
                                                BorderThickness="0">
                                            <fa:FontAwesome Icon="Trash" Width="16" Height="16"/>
                                        </Button>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </Border>




    </Grid>
</Page>
