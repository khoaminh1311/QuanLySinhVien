<Window x:Class="Management_system.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Management_system"
        mc:Ignorable="d"
        Title="AddStudentWindow" Height="600" Width="800">

    <Grid Margin="0">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="18"
                                  ShadowDepth="3"
                                  Opacity="0.22"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <TextBlock Text="THÊM SINH VIÊN"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#B00020"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- ========================= -->
                <!-- FORM 2 CỘT CHUẨN -->
                <!-- ========================= -->
                <Grid Grid.Row="1" Margin="0,10,0,0">

                    <!-- 2 Cột -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- STYLE DÙNG CHUNG -->
                    <Grid.Resources>

                        <!-- Label -->
                        <Style TargetType="TextBlock" x:Key="LabelStyle">
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>

                        <!-- TextBox -->
                        <Style TargetType="TextBox" x:Key="InputStyle">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Background" Value="#FAFAFA"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>

                        <!-- Button -->
                        <Style TargetType="Button" x:Key="SaveButton">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="FontSize" Value="17"/>
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Margin" Value="5,20,5,0"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Grid.Resources>

                    <!-- 7 HÀNG FORM -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- MSSV -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="MSSV:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtID" Style="{StaticResource InputStyle}"/>

                    <!-- Họ tên -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtName" Style="{StaticResource InputStyle}"/>

                    <!-- Giới tính -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Giới tính:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              x:Name="txtGender"
                              Height="35"
                              Margin="5">
                        <ComboBoxItem Content="Nam"/>
                        <ComboBoxItem Content="Nữ"/>
                    </ComboBox>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtEmail" Style="{StaticResource InputStyle}"/>

                    <!-- Khóa -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Khóa:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtKhoa" Style="{StaticResource InputStyle}"/>

                    <!-- Ngành -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Ngành:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtMajor" Style="{StaticResource InputStyle}"/>

                    <!-- Nút lưu -->
                    <Button Grid.Row="6"
                            Content="Lưu"
                            Style="{StaticResource SaveButton}"
                            Click="BtnSave_Click" Margin="39,20.4,0,15.8" Width="644" Grid.ColumnSpan="2"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
