<Application x:Class="QuanLySinhVien.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="/Teacher/View/Login.xaml">
    <Application.Resources>
        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
                <Setter Property="Padding" Value="6"/>
                <Setter Property="Background" Value="#FFFBEFF2"/>
                <Setter Property="BorderBrush" Value="#CCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="LeftMenuItemStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#333"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="0,4,0,4"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            </Style>
            <Style x:Key="RoundedButton" TargetType="Button">
                <Setter Property="Padding" Value="6,2"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="GlowButton" TargetType="Button">
                <Setter Property="Background" Value="#D32F2F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Application-level styles -->
            <Style x:Key="ModernDataGrid" TargetType="DataGrid">
                <Setter Property="Background" Value="White"/>
                <Setter Property="RowBackground" Value="White"/>
                <Setter Property="AlternatingRowBackground" Value="#F7F7F7"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
                <Setter Property="VerticalGridLinesBrush" Value="#E5E7EB"/>
                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <Style x:Key="PrimaryBtnStyle" TargetType="Button">
                <Setter Property="Background" Value="#D32F2F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Padding" Value="6"/>
                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
            </Style>
            <Style x:Key="RoundedTextBox" TargetType="TextBox">
                <Setter Property="Padding" Value="6"/>
                <Setter Property="Background" Value="#FFFBEFF2"/>
                <Setter Property="BorderBrush" Value="#CCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <SolidColorBrush x:Key="PrimaryBlue" Color="#0078D7"/>
            <SolidColorBrush x:Key="TextGray" Color="#64748B"/>
            <SolidColorBrush x:Key="BgLight" Color="#F8FAFC"/>
            <Style x:Key="MenuButtonStyle" TargetType="Button">
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
